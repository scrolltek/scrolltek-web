  <!-- jQuery Custom Scroller CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      $("#sidebar").mCustomScrollbar({
        theme: "minimal"
      });

      $('#sidebarCollapse, .overlay').on('click', function () {
        var $overlay = $('.overlay');
        $('#sidebar, #content').toggleClass('active');
        $('.collapse.in').toggleClass('in');
        $('a[aria-expanded=true]').attr('aria-expanded', 'false');
        if ($overlay.hasClass('active')) {
          $overlay.removeClass('active');
        } else {
          $overlay.addClass('active');
        }
      });

      // Scroll to top button appear
      $(document).on('scroll', function () {
        var scrollDistance = $(this).scrollTop();
        if (scrollDistance > 100) {
          $('.scroll-to-top').fadeIn();
        } else {
          $('.scroll-to-top').fadeOut();
        }
      });

      // Smooth scrolling using jQuery easing
      $(document).on('click', 'a.scroll-to-top', function (e) {
        var $anchor = $(this);
        $('html, body').stop().animate({
          scrollTop: '0px'
        }, 1000, 'easeInOutExpo');
        e.preventDefault();
      });

      // English settings toggle
      $('.hebrew-only').on('click', function () {
        $('.navbar-brand .hebrew').removeClass('d-none');
        $('.english').addClass('d-none');
        $('.card-deck').addClass('right-to-left');
      });
      $('.hebrew-and-english').on('click', function () {
        $('.navbar-brand .hebrew').addClass('d-none');
        $('.english').removeClass('d-none');
        $('.card-deck').removeClass('right-to-left');
      });

      // Init tooltips
      $(function () {
        $('[data-toggle="tooltip"]').tooltip()
      })

    });
  </script>
